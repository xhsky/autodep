{
  "es1":{
    "software": ["elasticsearch"], 
    "located": "/data/", 
    "elasticsearch_info":{
      "cluster_name": "es_cluster",       // 指定集群名称, 同一集群的名称需相同
      "jvm_mem": "2G",                    // 制定es的jvm内存
      "port": {
        "http_port": 9200,                // 服务端口
        "transport": 9300                 // 集群通信端口
      }, 
      "members":["es1", "es2", "es3"]     // 集群成员
    } 
  }, 
